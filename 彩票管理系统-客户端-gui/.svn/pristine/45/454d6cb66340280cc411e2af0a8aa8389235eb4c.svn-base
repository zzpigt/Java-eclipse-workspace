    private void jLogOutActionPerformed(java.awt.event.ActionEvent evt) throws IOException {                                        
        // 注销登录
    	MyRequest request = new MyRequest(MyRequest.TYPE_LOGOUT);
		request.getUmap().put(MyRequest.MEG_USERNAME, uName);
		request.getUmap().put(MyRequest.MEG_LEVEL, "彩民");
		// 包装好了，就发送过去，序列化
		oos.writeObject(request);
		oos.flush();
		LoginFrame lf = new LoginFrame(oos);
        lf.setVisible(true);
        this.dispose();
    }                                       

