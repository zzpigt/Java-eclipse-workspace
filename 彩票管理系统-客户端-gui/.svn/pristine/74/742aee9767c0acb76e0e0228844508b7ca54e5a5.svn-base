	private void jLogOutMenuItemActionPerformed(java.awt.event.ActionEvent evt) throws IOException {
		// 注销按钮
    	MyRequest request = new MyRequest(MyRequest.TYPE_LOGOUT);
		request.getUmap().put(MyRequest.MEG_USERNAME, uName);
		//这条好像没什么用
		//我写彩民也没啥问题
		request.getUmap().put(MyRequest.MEG_LEVEL, "公证员");
		// 包装好了，就发送过去，序列化
		oos.writeObject(request);
		oos.flush();
		LoginFrame lf = new LoginFrame(oos);
        lf.setVisible(true);
        this.dispose();
	}

